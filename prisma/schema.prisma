generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type CustomerInfo {
  name String
  phoneNumber String
}

type orderInfo {
  breakfast MenuItem
  additional_item MenuItem
  main_menu MenuItem
  drinks MenuItem
  protein MenuItem
  wait_time Float
}

type MenuItem {
  item      String
  price     Decimal
  quantity  Int
}

enum Role {
  CASHIER
  KITCHEN_SUPERVISOR
  AUDIT_ASSISTANT
  ORDER_PROCESSOR
  ADMIN
}

model User {
  id  String    @id @default(auto()) @map("_id") @db.ObjectId
  username String?
  email String?   @unique
  role Role
  location String
  hashedPassword String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  customer_info CustomerInfo
  order_info orderInfo
}

model Locations {
  id  String    @id @default(auto()) @map("_id") @db.ObjectId // the primary id of the location field, auto genrates the value, maps it to the _id column in mongodb and firld type is object id
  name String   @unique // sets a unique constraint for this field.
}
